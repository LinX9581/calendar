    <script>
        let userType = $('.userType').attr('value')
        if (userType == 'User') {
            $('.renderTable tr').find('th').remove()
            $('nav > ul > li:nth-child(3)').addClass('d-none')
            $('nav > ul > li:nth-child(4)').addClass('d-none')
            $('nav > ul > li:nth-child(5)').addClass('d-none')
        } else if (userType == 'SuperUser') {
            $('nav > ul > li:nth-child(5)').addClass('d-none')
        }
        let delId = ''
        let editId = ''
        let isDel = ''

        getOrder()
        async function getOrder() {
            let innerHTML = ''
            let innerDetailOrderHTML = ''
            let innerDetailOrderPositionHTML = ''

            await fetch('/getOrder', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
            }).then(res => res.json()).then(res => {
                innerHTML +=
                    `<thead>
                        <tr class="tr-main">
                            <th scope="col">委刊單</th>
                            <th scope="col">客戶名稱</th>
                            <th scope="col">活動名稱</th>
                            <th scope="col">類型</th>
                            <th scope="col">業務</th>
                            <th scope="col">備註</th>
                            <th scope="col">狀態</th>
                            <th style="text-align: center;">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="renderTable">
                    `;
                for (let item = 0; item < res.allOrder.length; item++) {
                    switch (res.allOrder[item].status) {
                        case '0':
                            res.allOrder[item].status = '停用'
                            break;
                        case 1:
                            res.allOrder[item].status = '啟用'
                            break;
                        case 2:
                            res.allOrder[item].status = '確定'
                            break;
                    }
                    // console.log(res.allOrder[item].status);
                    innerHTML +=
                        ` 
                        <tr delId="${res.allOrder[item].id}">
                            <td scope="row" data-th="客戶資料" class="d-none" cal="customerInfo">${res.allOrder[item].customerName}</td>
                            <td scope="row" data-th="委刊公司" class="d-none" cal="customer_company">${res.allOrder[item].customer_company}</td>
                            <td scope="row" data-th="委刊時間" class="d-none" cal="schedule_time">${moment(res.allOrder[item].start_time).format('YYYY-MM-DD') + "~" + moment(res.allOrder[item].end_time).format('YYYY-MM-DD')}</td>
                            <td scope="row" data-th="委刊單" cal="orderId">${res.allOrder[item].id}</td>
                            <td data-th="客戶名稱" cal="advertisers">${res.allOrder[item].advertisers}</td>
                            <td data-th="活動名稱" cal="title">${res.allOrder[item].title}</td>
                            <td data-th="類型" cal="ad_type">${res.allOrder[item].ad_type} </td>
                            <td data-th="業務" cal="salesperson">${res.allOrder[item].create_by}</td>
                            <td data-th="備註" cal="memo">${res.allOrder[item].memo}</td>
                            <td data-th="狀態" cal="status">${res.allOrder[item].status}</td>
                            <th editId="${res.allOrder[item].id}">
                                <button type="button" class="btn btn-sm btn-default orderEditBtn"><span class="fa fa-edit"></span></button>
                                <button type="button" class="btn btn-sm btn-default orderDelBtn"><span class="fa fa-trash-alt"></span></button>
                                <button type="button" class="btn btn-sm btn-default orderDetailBtn"><span class="fa fa-eye" aria-hidden="true"> </span></button>
                            </th>
                        </tr>
                    `;

                }
                innerHTML += `</tbody>`
                $('.orderInfo').html(innerHTML)


                $('.orderDelBtn').click(async function () {
                    editId = $(this).parents('th').attr('editId')
                    let isDel = confirm('確定刪除 ' + editId + ' ?')
                    if (isDel) {
                        $(this).parent().parent().remove()
                        await fetch('/delete_order', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                "delId": editId,
                            })
                        })
                    }
                })

                $('.orderEditBtn').click(async function () {
                    editId = $(this).parents('th').attr('editId')
                    let customerInfo = $(this).parents('tr').find("td[cal=customerInfo]").text()
                    $('.orderCustomerName').find('option').remove()
                    $('.orderCustomerName').append(`<option class="dropdown-item" value=` + customerInfo + `>` + customerInfo + `</option>`);
                    await renderCustomer()

                    $('#orderId').val(editId)
                    $('#advertisers').val($(this).parents('tr').find("td[cal=advertisers]").text())
                    $('#name').val($(this).parents('tr').find("td[cal=title]").text())
                    $('#customer').val($(this).parents('tr').find("td[cal=customer]").text())
                    $('#customer_company').val($(this).parents('tr').find("td[cal=customer_company]").text())
                    $('#salesperson').val($(this).parents('tr').find("td[cal=salesperson]").text())
                    $('#schedule_time').val($(this).parents('tr').find("td[cal=schedule_time]").text())
                    $('#memo').val($(this).parents('tr').find("td[cal=memo]").text())

                    let ad_type = $(this).parents('tr').find("td[cal=ad_type]").text();
                    let ad_typeArray = [ad_type, 'CPM', 'CPC', 'CPL']
                    $.each(ad_typeArray, function (index, val) {
                        $('.orderAdType').append(
                            `
                            <option class="dropdown-item" value=` + val + `>` + val + `</option>
                        `)
                    })

                    let status = $(this).parents('tr').find("td[cal=status]").text()
                    console.log(status);
                    let statusArray = []
                    if (status == '啟用') { statusArray = [status, '停用', '確定'] } else if (status == '停用') { statusArray = [status, '啟用', '確定'] } else if (status == '確定') { statusArray = [status, '啟用', '停用'] }
                    let orderStatus = ''
                    // $('#status').val(status)
                    $('.orderStatus').find('option').remove()
                    $.each(statusArray, function (index, val) {
                        if (val == '啟用') { orderStatus = '1' } else if (val == '停用') { orderStatus = '0' } else if (val == '確定') { orderStatus = '2' }
                        $('.orderStatus').append(
                            `
                            <option class="dropdown-item" value=` + orderStatus + `>` + val + `</option>
                        `)
                    })

                    //顯示編輯table
                    $('#orderEditModal').modal('show');
                })

                $('.orderDetailBtn').click(async function () {
                    editId = $(this).parents('th').attr('editId')
                    innerDetailOrderHTML = ''
                    innerDetailOrderChannelHTML = ''
                    innerDetailOrderPositionHTML = ''
                    innerDetailOrderCustomerHTML = ''

                    $('#orderDetailModal').modal('show');
                    await fetch('/detail_order', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            "editId": editId,
                        })
                    }).then(res => res.json()).then(res => {
                        console.log(res);
                        //顯示該委刊單詳細資料
                        innerDetailOrderHTML +=
                            `<thead>
                                <tr class="tr-title">
                                    <th scope="col">委刊單</th>
                                    <th scope="col">活動名稱</th>
                                    <th scope="col">客戶名稱</th>
                                    <th scope="col">客戶公司</th>
                                    <th scope="col">刊登方式</th>
                                    <th scope="col">業務</th>
                                    <th scope="col">備註</th>
                                </tr>
                            </thead>
                            <tbody class="renderTable">
                            `;
                        for (let item = 0; item < res.getDetailOrderList.length; item++) {
                            innerDetailOrderHTML +=
                                ` 
                                <tr>
                                    <td scope="row" data-th="委刊單" cal="id">${res.getDetailOrderList[item].id}</td>
                                    <td scope="row" data-th="活動名稱" cal="title">${res.getDetailOrderList[item].title}</td>
                                    <td scope="row" data-th="客戶名稱" cal="advertisers">${res.getDetailOrderList[item].advertisers}</td>
                                    <td scope="row" data-th="客戶公司" cal="customer_company">${res.getDetailOrderList[item].customer_company}</td>
                                    <td data-th="刊登方式" cal="advertisers">${res.getDetailOrderList[item].ad_type}</td>
                                    <td scope="row" data-th="業務" cal="salesperson">${res.getDetailOrderList[item].create_by}</td>
                                    <td scope="row" data-th="備註" cal="memo">${res.getDetailOrderList[item].memo}</td>
                                </tr>
                            `;
                        }
                        innerDetailOrderHTML += `</tbody>`
                        $('.detailTable').html(innerDetailOrderHTML)

                        //顯示該委刊單被廣告版位使用狀況
                        innerDetailOrderPositionHTML +=
                            `<thead>
                                <tr class="tr-title">
                                    <th scope="col">頻道名稱</th>
                                    <th scope="col">頻道網域</th>
                                    <th scope="col">廣告版位</th>
                                    <th scope="col">刊登方式</th>
                                    <th scope="col">刊登時間</th>
                                </tr>
                            </thead>
                            <tbody class="renderTable">
                            `;
                        for (let item = 0; item < res.getDetailPositionData.length; item++) {
                            innerDetailOrderPositionHTML +=
                                ` 
                                <tr>
                                    <td scope="row" data-th="頻道名稱" cal="channelName">${res.getDetailPositionData[item].channelName}</td>
                                    <td scope="row" data-th="頻道網域" cal="channelName">${res.getDetailPositionData[item].channelDomain}</td>
                                    <td scope="row" data-th="廣告版位" cal="orderId">${res.getDetailPositionData[item].name}</td>
                                    <td data-th="刊登方式" cal="advertisers">${res.getDetailOrderList[0].ad_type}</td>
                                    <td data-th="時間" cal="time">${moment(res.getDetailPositionData[item].start).format('YYYY-MM-DD')} ~ ${moment(res.getDetailPositionData[item].end).format('YYYY-MM-DD')}</td>
                                </tr>
                            `;
                        }
                        innerDetailOrderPositionHTML += `</tbody>`
                        $('.detailTablePosition').html(innerDetailOrderPositionHTML)

                        //顯示該委刊單的客戶詳細資料
                        innerDetailOrderCustomerHTML +=
                            `<thead>
                                <tr class="tr-title">
                                    <th scope="col">客戶代號</th>
                                    <th scope="col">客戶全名</th>
                                    <th scope="col">聯絡人</th>
                                    <th scope="col">聯絡電話</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">郵遞區號</th>
                                    <th scope="col">發票地址</th>
                                    <th scope="col">統一編號</th>
                                    <th scope="col">付款條件</th>
                                    <th scope="col">服務業務</th>
                                    <th scope="col">備註</th>
                                </tr>
                            </thead>
                            <tbody class="renderTable">
                            `;
                        for (let item = 0; item < res.getDetailCustomerData.length; item++) {
                            innerDetailOrderCustomerHTML +=
                                ` 
                                <tr>
                                    <td scope="row" data-th="客戶代號" cal="orderId">${res.getDetailCustomerData[item].code}</td>
                                    <td scope="row" data-th="客戶全名" cal="orderId">${res.getDetailCustomerData[item].name}</td>
                                    <td scope="row" data-th="聯絡人" cal="orderId">${res.getDetailCustomerData[item].contacts}</td>
                                    <td scope="row" data-th="聯絡電話" cal="orderId">${res.getDetailCustomerData[item].phone}</td>
