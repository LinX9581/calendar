    <script>
        getPosition()
        async function getPosition() {
            let innerHTML = ''
            await fetch('/getPosition', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
            }).then(res => res.json()).then(res => {
                console.log(res);
                innerHTML +=
                    `<thead>
                        <tr class="tr-main">
                            <th width="30px" style="text-align: center;"></th>
                            <th scope="col">名稱</th>
                            <th scope="col">頻道</th>
                            <th scope="col">輪替數</th>
                            <th scope="col">備註</th>
                            <th scope="col">委刊數</th>
                        </tr>
                    </thead>
                    <tbody class="deptDataBody">
                    </tbody>
                    `;
                for (let item = 0; item < res.allPosition.length; item++) {
                    innerHTML +=
                        ` 
                        <tr>
                            <th>
                                <a href="#"><i class="far fa-edit"></i></a>
                            </th>
                            <td scope="row" data-th="名稱">
                                ${res.allPosition[item].name} 
                            </td>
                            <td data-th="頻道">
                                ${res.allPosition[item].channel} 
                            </td>
                            <td data-th="輪替數">
                                ${res.allPosition[item].rotation} 
                            </td>
                            <td data-th="備註">
                                ${res.allPosition[item].memo} 
                            </td>
                            <td data-th="委刊數">
                                0  
                            </td>
                        </tr>
                    `;

                }
                $('.table').html(innerHTML)
            })
        }

        $(function () {
            $(".datepicker").datepicker();
        });

    </script>
