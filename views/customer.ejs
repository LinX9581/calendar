    <script>
        let userType = $('.userType').attr('value')
        //使用者 == User 禁止編輯
        if (userType == 'User') {
            $('.customerEditBtn').addClass('d-none')
            $('.customerDelBtn').addClass('d-none')
            $('nav > ul > li:nth-child(5)').addClass('d-none')
        } else if (userType == 'SuperUser') {
            $('nav > ul > li:nth-child(5)').addClass('d-none')
        }
        
        let delId = ''
        let isDel = ''

        getCustomer()
        async function getCustomer() {
            let innerHTML = ''
            let innerDetailOrderHTML = ''

            await fetch('/getCustomer', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
            }).then(res => res.json()).then(res => {
                innerHTML +=
                    `<thead>
                        <tr class="tr-main">
                            <th scope="col">客戶代號</th>
                            <th scope="col">客戶全名</th>
                            <th scope="col">連絡人</th>
                            <th scope="col">連絡電話</th>
                            <th scope="col">備註</th>
                            <th style="text-align: center;">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="renderTable">
                    `;
                for (let item = 0; item < res.allCustomer.length; item++) {
                    innerHTML +=
                        ` 
                        <tr delId="${res.allCustomer[item].code}">
                            <td scope="row" data-th="信箱" class="d-none" cal="email">${res.allCustomer[item].email}</td>
                            <td scope="row" data-th="業務" class="d-none" cal="sale_name">${res.allCustomer[item].sale_name}</td>
                            <td scope="row" data-th="統一編號" class="d-none" cal="tax_id">${res.allCustomer[item].tax_id}</td>
                            <td scope="row" data-th="郵遞區號" class="d-none" cal="postal_code">${res.allCustomer[item].postal_code}</td>
                            <td scope="row" data-th="發票地址" class="d-none" cal="address">${res.allCustomer[item].address}</td>
                            <td scope="row" data-th="付款條件" class="d-none" cal="payment_terms">${res.allCustomer[item].payment_terms}</td>
                            <td scope="row" data-th="客戶代號" cal="code">${res.allCustomer[item].code}</td>
                            <td data-th="客戶全名" cal="name">${res.allCustomer[item].name}</td>
                            <td data-th="連絡人" cal="contacts">${res.allCustomer[item].contacts}</td>
                            <td data-th="連絡電話" cal="phone">${res.allCustomer[item].phone}</td>
                            <td data-th="備註" cal="memo">${res.allCustomer[item].memo}</td>
                            <th editId="${res.allCustomer[item].code}">
                                <button type="button" class="btn btn-sm btn-default customerEditBtn"><span class="fa fa-edit"></span></button>
                                <button type="button" class="btn btn-sm btn-default customerDelBtn"><span class="fa fa-trash-alt"></span></button>
                                <button type="button" class="btn btn-sm btn-default customerDetailBtn"><span class="fa fa-eye" aria-hidden="true"> </span></button>
                            </th>
                        </tr>
                    `;
                }
                innerHTML += `</tbody>`
                $('.customerInfo').html(innerHTML)

                let editId = ''
                $('.customerDelBtn').click(async function () {
                    editId = $(this).parents('th').attr('editId')
                    let isDel = confirm('確定刪除 ' + delId + ' ?')
                    if (isDel) {
                        $(this).parent().parent().parent().remove()
                        await fetch('/delete_customer', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                "delId": editId,
                            })
                        })
                    }
                })

                $('.customerEditBtn').click(async function () {
                    editId = $(this).parents('th').attr('editId')
                    $('#calId').val(editId)
                    $('#code').val($(this).parents('tr').find("td[cal=code]").text())
                    $('#name').val($(this).parents('tr').find("td[cal=name]").text())
                    $('#contacts').val($(this).parents('tr').find("td[cal=contacts]").text())
                    $('#phone').val($(this).parents('tr').find("td[cal=phone]").text())
                    $('#email').val($(this).parents('tr').find("td[cal=email]").text())
                    $('#sale_name').val($(this).parents('tr').find("td[cal=sale_name]").text())
                    $('#tax_id').val($(this).parents('tr').find("td[cal=tax_id]").text())
                    $('#postal_code').val($(this).parents('tr').find("td[cal=postal_code]").text())
                    $('#address').val($(this).parents('tr').find("td[cal=address]").text())
                    $('#payment_terms').val($(this).parents('tr').find("td[cal=payment_terms]").text())
                    $('#memo').val($(this).parents('tr').find("td[cal=memo]").text())

                    //顯示編輯table
                    $('#customerEditModal').modal('show');
                })


                $('.customerDetailBtn').click(async function () {
                    editId = $(this).parents('th').attr('editId')
                    innerDetailCustomerHTML = ''
                    $('#customerDetailModal').modal('show');

                    await fetch('/detail_customer', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            "delId": editId,
                        })
                    }).then(res => res.json()).then(res => {
                        innerDetailCustomerHTML +=
                            `<thead>
                                <tr class="tr-title">
                                    <th scope="col">客戶代號</th>
                                    <th scope="col">客戶全名</th>
                                    <th scope="col">連絡人</th>
                                    <th scope="col">連絡電話</th>
                                    <th scope="col">連絡信箱</th>
                                    <th scope="col">郵遞區號</th>
                                    <th scope="col">發票地址</th>
                                    <th scope="col">統一編號</th>
                                    <th scope="col">付款條件</th>
                                    <th scope="col">服務業務</th>
                                    <th scope="col">備註</th>
                                </tr>
                            </thead>
                            <tbody class="renderTable">
                            `;

                        for (let item = 0; item < res.getDetailData.length; item++) {
                            innerDetailCustomerHTML +=
                                ` <tr delId="${res.getDetailData[item].code}">
                                    <td scope="row" data-th="客戶代號" cal="code">${res.getDetailData[item].code}</td>
                                    <td data-th="客戶全名" cal="name">${res.getDetailData[item].name}</td>
                                    <td data-th="連絡人" cal="contacts">${res.getDetailData[item].contacts}</td>
                                    <td data-th="連絡電話" cal="phone">${res.getDetailData[item].phone}</td>
                                    <td data-th="連絡信箱" cal="email">${res.getDetailData[item].email}</td>
                                    <td data-th="郵遞區號" cal="postal_code">${res.getDetailData[item].postal_code}</td>
                                    <td data-th="發票地址" cal="address">${res.getDetailData[item].address}</td>
                                    <td data-th="統一編號" cal="tax_id">${res.getDetailData[item].tax_id}</td>
                                    <td data-th="付款條件" cal="payment_terms">${res.getDetailData[item].payment_terms}</td>
                                    <td data-th="服務業務" cal="sale_name">${res.getDetailData[item].sale_name}</td>
                                    <td data-th="備註" cal="memo">${res.getDetailData[item].memo}</td>
                                </tr>`;
                        }
                        innerDetailCustomerHTML += `</tbody>`
                        $('.detailTable').html(innerDetailCustomerHTML)
                    })
                })
            })
        }
    </script>
</body>

