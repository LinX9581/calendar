    <script>
        renderChannel()
        async function renderChannel() {
            $('.customerName').append(
                `
                    <option class="dropdown-item"></option>
                `
            );

            await fetch('/renderCustomer', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({})
            }).then(res => res.json()).then((allCustomer) => {
                $.each(allCustomer.customer, function (index, val) {
                    $('.customerName').append(
                        `
                            <option class="dropdown-item" value=` + val.id + "&&" + val.name + `>` + val.name + `</option>
                        `
                    );
                })
            })
        }
        $(function () {
            // jQuery Validation Plugin 的Twitter BootStrap 3 支援
            $.validator.setDefaults({
                highlight: function (element) {
                    $(element).closest('.form-group').addClass('has-error');
                },
                unhighlight: function (element) {
                    $(element).closest('.form-group').removeClass('has-error');
                },
                errorElement: 'span',
                errorClass: 'help-block',
                errorPlacement: function (error, element) {
                    if (element.parent('.controls').length) {
                        error.insertAfter(element.parent());
                    } else {
                        error.insertAfter(element);
                    }
                }
            });
            // jQuery Validation Plugin的套用
            $('#form').validate({
                rules: {
                    name: "required",
                    customer: "required",
                    // advertisers: "required",
                    // customer_company: "required",
                    // salesperson: "required",
                    // schedule_time: "required",
                    // ad_type: "required",
                },
                messages: {
                    name: "請輸入活動名稱",
                    customer: "請選擇客戶資料",
                    // advertisers: "請輸入廣告主",
                    // customer_company: "請輸入委刊公司",
                    // salesperson: "請輸入聯絡人",
                    // schedule_time: "請輸入走期",
                    // ad_type: "請輸入類型",
                }
            });
        });

        dateRangePicker()
        async function dateRangePicker() {
            let pickerYesterday = moment(new Date()).add(-1, 'days').format('MM-DD-YYYY');
            let defaultYesterday = moment(new Date()).add(-1, 'days').format('YYYY-MM-DD');
            await $('#schedule_time').daterangepicker({
                "dateLimit": {
                    "days": 32
                },
                "startDate": pickerYesterday,
                "endDate": pickerYesterday,
                "minDate": "01/01/2021",
                "maxDate": pickerYesterday
            }, function (start, end, label) { });
        }
        $(function () {
            $(".datepicker").datepicker();
        });
    </script>
