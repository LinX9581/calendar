    <script>
        let editId = ''
        let delId = ''
        let isDel = ''

        //使用者 == User 禁止編輯
        let userType = $('.userType').attr('value')
        if (userType == 'User') {
            $('.renderTable tr').find('td:last').remove()
            $('nav > ul > li:nth-child(3)').addClass('d-none')
            $('nav > ul > li:nth-child(4)').addClass('d-none')
            $('nav > ul > li:nth-child(5)').addClass('d-none')
        } else if (userType == 'SuperUser') {
            $('nav > ul > li:nth-child(5)').addClass('d-none')
        }

        getChannel()
        async function getChannel() {
            let innerHTML = ''
            await fetch('/getChannel', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
            }).then(res => res.json()).then(res => {
                console.log(res.allChannel);
                innerHTML +=
                    `<thead>
                        <tr class="tr-main">
                            <th scope="col">名稱</th>
                            <th scope="col">網域</th>
                            <th scope="col">廣告版位數</th>
                            <th scope="col">備註</th>
                            <th scope="col">狀態</th>
                            <th style="text-align: center;">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="renderTable">
                    `;
                for (let item = 0; item < res.allChannel.length; item++) {
                    if (res.allAdNumbers[item] == undefined) {
                        res.allAdNumbers[item] = 0
                    }
                    if (res.allChannel[item].status == '1') { res.allChannel[item].status = '啟用' } else res.allChannel[item].status = '停用'
                    innerHTML +=
                        ` 
                        <tr delId="${res.allChannel[item].link}">
                            <td scope="row" data-th="名稱" cal="name" channelId="${res.allChannel[item].link}">${res.allChannel[item].name}</td>
                            <td data-th="網域" cal="domain">${res.allChannel[item].domain}</td>
                            <td data-th="廣告版位數">${res.allAdNumbers[item]}</td>
                            <td data-th="備註" cal="memo">${res.allChannel[item].memo}</td>
                            <td data-th="狀態" cal="status">${res.allChannel[item].status}</td>
                            <th editId="${res.allChannel[item].link}">
                                <button type="button" class="btn btn-sm btn-default channelEditBtn"><span class="fa fa-edit"></span></button>
                                <button type="button" class="btn btn-sm btn-default channelDelBtn"><span class="fa fa-trash-alt"></span></button>
                            </th>
                        </tr>
                    `;
                }
                innerHTML += `</tbody>`
                $('.table').html(innerHTML)

                $('.channelDelBtn').click(async function () {
                    editId = $(this).parents('th').attr('editId')
                    let isDel = confirm('確定刪除 ' + editId + ' ?')
                    if (isDel) {
                        $(this).parent().parent().remove()
                        await fetch('/delete_channel', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                "delId": editId,
                            })
                        })
                    }
                })

                $('.channelEditBtn').click(async function () {
                    editId = $(this).parents('th').attr('editId')

                    $('#channelId').val(editId)
                    $('#name').val($(this).parents('tr').find("td[cal=name]").text())
                    $('#domain').val($(this).parents('tr').find("td[cal=domain]").text())
                    $('#memo').val($(this).parents('tr').find("td[cal=memo]").text())

                    let status = $(this).parents('tr').find("td[cal=status]").text()
                    let statusArray = []
                    if (status == '啟用') { statusArray = [status, '停用'] } else if (status == '停用') { statusArray = [status, '啟用'] }
                    let channelStatus = ''
                    $('#status').val(status)
                    $('.channelStatus').find('option').remove()
                    $.each(statusArray, function (index, val) {
                        if (val == '啟用') { channelStatus = '1' } else channelStatus = '0'
                        $('.channelStatus').append(
                            `
                            <option class="dropdown-item" value=` + channelStatus + `>` + val + `</option>
                        `)
                    })

                    //顯示編輯table
                    $('#channelEditModal').modal('show');
                })


                let channelId = '',
                    name = '',
                    domain = '',
                    memo = '',
                    status = '';

                //動態監聽按下acep新增欄位
                $('.btn-group').delegate("#bAcep", "click", async function () {
                    let currentRow = $(this).parents('tr');
                    currentRow.find('td').each(function () {
                        channelId = $(this).parent().find("td").attr('channelId')
                        name = $(this).parent().find("td[cal=name]").text()
                        domain = $(this).parent().find("td[cal=domain]").text()
                        memo = $(this).parent().find("td[cal=memo]").text()
                        status = $(this).parent().find("td[cal=status]").text()
                    })
                    await fetch('/update_channel', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            "channelId": channelId,
                            "name": name,
                            "domain": domain,
                            "memo": memo,
                            "status": status,
                        })
                    }).then(res => res.json()).then(res => {
                        console.log(res);
                    })
                })
            })

        }
    </script>
