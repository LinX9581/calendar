        let userType = $('.userType').attr('value')
        let delId = ''
        let isDel = ''

        getChannel()
        async function getChannel() {
            let innerHTML = ''
            await fetch('/getChannel', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
            }).then(res => res.json()).then(res => {
                console.log(res.allChannel);
                innerHTML +=
                    `<thead>
                        <tr class="tr-main">
                            <th scope="col">名稱</th>
                            <th scope="col">網域</th>
                            <th scope="col">廣告版位數</th>
                            <th scope="col">備註</th>
                            <th scope="col">狀態</th>
                        </tr>
                    </thead>
                    <tbody class="renderTable">
                    `;
                for (let item = 0; item < res.allChannel.length; item++) {
                    if (res.allAdNumbers[item] == undefined) {
                        res.allAdNumbers[item] = 0
                    }
                    innerHTML +=
                        ` 
                        <tr delId="${res.allChannel[item].link}">
                            <td scope="row" data-th="名稱" cal="name" channelId="${res.allChannel[item].link}">${res.allChannel[item].name}</td>
                            <td data-th="網域" cal="domain">${res.allChannel[item].domain}</td>
                            <td data-th="廣告版位數">${res.allAdNumbers[item]}</td>
                            <td data-th="備註" cal="memo">${res.allChannel[item].memo}</td>
                            <td data-th="狀態" cal="status">${res.allChannel[item].status}</td>
                        </tr>
                    `;
                }
                innerHTML += `</tbody>`
                $('.table').html(innerHTML)

                var editChannelTable = new BSTable("editTable", {
                    onDelete: async function (button) {
                        await fetch('/delete_channel', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                "delId": delId,
                            })
                        }).then(res => res.json()).then(res => {
                            console.log(res);
                        })
                    },
                });
                editChannelTable.init()

                //動態新增完後讓功能欄上色
                $(".renderTable>tr").find('td:last').css("background-color", "#ffce2d");
                //使用者 == User 禁止編輯
                if (userType == 'User') {
                    $('.renderTable tr').find('td:last').remove()
                }

                let channelId = '',
                    name = '',
                    domain = '',
                    memo = '',
                    status = '';

                //動態監聽按下acep新增欄位
                $('.btn-group').delegate("#bAcep", "click", async function () {
                    let currentRow = $(this).parents('tr');
                    currentRow.find('td').each(function () {
                        channelId = $(this).parent().find("td").attr('channelId')
                        name = $(this).parent().find("td[cal=name]").text()
                        domain = $(this).parent().find("td[cal=domain]").text()
                        memo = $(this).parent().find("td[cal=memo]").text()
                        status = $(this).parent().find("td[cal=status]").text()
                    })
                    await fetch('/update_channel', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            "channelId": channelId,
                            "name": name,
                            "domain": domain,
                            "memo": memo,
                            "status": status,
                        })
                    }).then(res => res.json()).then(res => {
                        console.log(res);
                    })
                })
            })

        }
    </script>
