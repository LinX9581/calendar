    <!-- jQuery -->
    <script src="js/jquery-3.2.1.min.js"></script>
    <script src="js/index/jquery-ui.min.js"></script>
    <script src="js/index/validate.js"></script>
    <script>
        $(function () {

            // jQuery Validation Plugin 的Twitter BootStrap 3 支援
            $.validator.setDefaults({
                highlight: function (element) {
                    $(element).closest('.form-group').addClass('has-error');
                },
                unhighlight: function (element) {
                    $(element).closest('.form-group').removeClass('has-error');
                },
                errorElement: 'span',
                errorClass: 'help-block',
                errorPlacement: function (error, element) {
                    if (element.parent('.controls').length) {
                        error.insertAfter(element.parent());
                    } else {
                        error.insertAfter(element);
                    }
                }
            });
            // jQuery Validation Plugin的套用
            $('#form').validate({
                rules: {
                    code: "required",
                    name: "required",
                    contacts: "required",
                    phone: "required",
                    email: "required",
                    sale_name: "required",
                    tax_id: "required",
                    postal_code: "required",
                    address: "required",
                    payment_terms: "required",
                },
                messages: {
                    code: "請輸入客戶代號",
                    name: "請輸入客戶名稱",
                    contacts: "請輸入聯絡人",
                    phone: "請輸入聯絡電話",
                    email: {
                        required: "請輸入信箱",
                        email: jQuery.format("請輸入正確郵件格式")
                    },
                    sale_name: "請輸入業務人員名稱",
                    tax_id: "請輸入統一編號",
                    postal_code: "請輸入郵遞區號",
                    address: "請輸入發票地址",
                    payment_terms: "請輸入付款條件",
                }
            });
        });
        $(function () {
            $(".datepicker").datepicker();
        });

    </script>
