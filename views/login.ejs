    <script>
        function pwd_handler(pwd) {
            let form = document.contact;
            if ($('#password').val() != '') {
                $('#md5password').val(md5($('#password').val()))
            }
        }
    </script>
</head>
<body>
    <body themebg-pattern="theme1" onload="document.getElementById('account').focus()">
        <section class="login-block">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <form class="md-float-material form-material" role="form" action="/" method="post" onsubmit="">
                            <div class="text-center nnlogo">
                                <a href="https://www.nownews.com/" target="_blank">
                                    <img src="/images/logo-nownews.svg" alt="logo">
                                </a>
                            </div>
                            <div class="auth-box card">
                                <div class="card-block">
                                    <div class="row m-b-20">
                                        <div class="col-md-12">
                                            <h3 class="text-center"><%= title %></h3>
                                        </div>
                                    </div>
                                    <div class="form-group form-primary form-static-label mb-5">
                                        <input name="account" type="text" id="account" class="form-control">
                                        <span class="form-bar"></span>
                                        <label class="float-label">請輸入帳號</label>
                                    </div>
                                    <div class="form-group form-primary form-static-label">
                                        <input name="password" type="Password" id="password" class="form-control">
                                        <input name="md5password" type="hidden" id="md5password" />
                                        <span class="form-bar"></span>
                                        <label class="float-label">請輸入密碼</label>
                                    </div>
                                    <div class="row m-t-30">
                                        <div class="col-md-12">
                                            <button id="loginBTN" type="submit"
                                                class="btn btn-primary btn-md btn-block waves-effect waves-light text-center m-b-20">登
                                                入</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Required Jquery -->
            <script type="text/javascript" src="https://technext.github.io/material_able/assets/js/jquery/jquery.min.js"></script>
            <script type="text/javascript" src="https://technext.github.io/material_able/assets/js/jquery-ui/jquery-ui.min.js"></script>
            <script type="text/javascript" src="https://technext.github.io/material_able/assets/js/popper.js/popper.min.js"></script>
            <script type="text/javascript" src="assets/js/bootstrap/js/bootstrap.min.js https://technext.github.io/material_able/assets/js/bootstrap/js/bootstrap.min.js"></script>
            <script src="https://technext.github.io/material_able/assets/pages/waves/js/waves.min.js"></script>
            <script type="text/javascript" src="https://technext.github.io/material_able/assets/js/jquery-slimscroll/jquery.slimscroll.js"></script>
            <script type="text/javascript" src="https://technext.github.io/material_able/assets/js/common-pages.js"></script>
    </body>
</html>